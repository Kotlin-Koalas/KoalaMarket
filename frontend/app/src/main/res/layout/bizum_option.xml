<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="3dp"
        android:background="#ffffff"
        android:fontFamily="@font/karla"
        android:text="NÃºmero de telefono:"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@+id/frameLayoutEmail"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayoutEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/basic_grey_shape"
        android:padding="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewEmail">

        <ImageView
            android:id="@+id/imageViewEmail1"
            android:layout_width="27dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/phone" />

        <ImageView
            android:id="@+id/imageViewEmail2"
            android:layout_width="1.5dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:background="#bababa"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/editTextEmail"
            app:layout_constraintStart_toEndOf="@+id/imageViewEmail1"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="8dp"
            android:background="@android:color/transparent"
            android:ems="8"
            android:maxLength="9"
            android:fontFamily="@font/karla"
            android:gravity="center_vertical"
            android:hint="123456789"
            android:inputType="phone"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewEmail2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>